// Q1

// Problem 2665- Counter 2

var createCounter = function(init) {
    let n= init;

    return {
        increment: () => ++n,
        decrement: () => --n,
        reset: () => n= init,
    }
};

// Q2

// 2635- Apply Transform Over Each Element in Array

var map = function(arr, fn) {
    for(let i= 0; i< arr.length; i++) {
        arr[i]= fn(arr[i], i);
    }
    return arr;
};
